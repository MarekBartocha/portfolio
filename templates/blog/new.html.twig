{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5" style="max-width: 700px;">
   {% for message in app.flashes('success') %}
      <div class="alert alert-success">{{ message }}</div>
   {% endfor %}

    <h1 class="mb-4 text-center">üìù Nowy wpis / Edycja</h1>

    {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control',  'style': 'background-color: #868680;'}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 10,  'style': 'background-color: #868680;'}}) }}
            {{ form_errors(form.content) }}
        </div>

        <div class="d-flex align-items-center justify-content-between mt-3 gap-2">
            <div class="form-check mb-0">
                {{ form_widget(form.public, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.public, null, {'label_attr': {'class': 'form-check-label mb-0'}}) }}
            </div>

            <div class="ms-auto d-flex gap-2">
                <a href="{{ path('topic_show', {'_locale': app.request.locale, 'slug': slug}) }}" class="btn btn-secondary">
                    Powr√≥t
                </a>
                <button class="btn btn-success">
                    üíæ Zapisz
                </button>
            </div>
        </div>


        <hr>

    {{ form_end(form) }}
    <h4>üì∏ Za≈Çaduj nowe zdjƒôcia</h4>
    <form action="{{ path('blog_image_upload', {'_locale': app.request.locale, 'slug_topic': blog.slug}) }}" 
        method="post" enctype="multipart/form-data" class="d-flex gap-2 align-items-center">
        <input type="file" name="uploadedImages[]" multiple class="form-control" accept="image/*">
        <button type="submit" class="btn btn-primary">Dodaj</button>
    </form>

    <hr>
    <h4>üì∏ Za≈Çadowane zdjƒôcia:</h4>

    {% if blog.images|length > 0 %}
        <div class="row g-3">
            {% for image in blog.images %}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 text-center">
                    <div class="card shadow-sm border-0">
                        <div class="card-img-top overflow-hidden" style="height:200px; background: gray;">
                            <img src="{{ asset('uploads/' ~ image.filePath) }}" 
                                class="img-fluid rounded hover-scale" 
                                alt="Zdjƒôcie {{ image.position }}" 
                                style="object-fit: cover; width: 100%; height: 100%;">
                        </div>
                        <div class="card-body p-2" style="background: #f8f9fa;">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">Pozycja: {{ image.position }}</small>
                            <form method="post" 
                                action="{{ path('image_delete', {
                                    '_locale': app.request.locale,
                                    'slug_topic': blog.slug,
                                    'id': image.id
                                }) }}" 
                                onsubmit="return confirm('Czy na pewno chcesz usunƒÖƒá to zdjƒôcie?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
                                <button class="btn btn-sm btn-danger" type="submit">
                                    <i class="bi bi-trash"></i> Usu≈Ñ
                                </button>
                            </form>
                        </div>
                    </div>

                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-muted">Brak zdjƒôƒá.</p>
    {% endif %}

</div>
{% endblock %}
