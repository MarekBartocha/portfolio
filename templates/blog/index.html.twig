{% extends 'base.html.twig' %}

{% block body %}
    <center>
        <H1 class="center">Blog - Tematy</H1>
    </center>

    <ul class="list-group">
    {% for topic in topics %}
        <li style="background-color:#949b8f;" class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <a class="text-dark fw-bold text-decoration-none" href="{{ path('public_topic_show', {slug: topic.slug, _locale: app.request.locale}) }}">
                    {{ topic.name }}
                </a>
            </div>
        </li>
    {% else %}
        <li class="list-group-item">Brak temat√≥w.</li>
    {% endfor %}
    </ul>
    
{% endblock %}
