{% extends 'base.html.twig' %}

{% block body %}
   <center><h1>Lista tematów</h1></center>

   {% for message in app.flashes('success') %}
      <div class="alert alert-success">{{ message }}</div>
   {% endfor %}

   {{ form_start(form) }}
      <div class="d-flex justify-content-center mt-4">
         <div class="d-flex gap-2">
            {{ form_widget(form.name, { 'attr': {'placeholder': 'Nowy temat', 'class': 'form-control'} }) }}
            <button class="btn btn-primary">Zapisz</button>
         </div>
      </div>
   {{ form_end(form) }}


   <center><br><h2 class="mt-4">Lista tematów</h2></center>
   <ul class="list-group">
      {% for topic in topics %}
         <li class="list-group-item">
               <a href="{{ path('topic_show', {slug: topic.slug, _locale: app.request.locale}) }}">
                  {{ topic.name }}
               </a>
         </li>
      {% else %}
         <li class="list-group-item">Brak tematów.</li>
      {% endfor %}
   </ul>






{% endblock %}
